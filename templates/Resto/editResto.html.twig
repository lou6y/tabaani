{% extends './backend/backbody.html.twig' %}
{% block content %}

    {{ form_start(form,{attr:{'idResto':'form'}}) }}
    <div class="container">
        <div class="form-group">
            {{ form_label(form.nomresto,"Nom:") }}

            {{ form_widget(form.nomresto, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.nbplace,"Nbre de place:") }}

            {{ form_widget(form.nbplace, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.budget,"budget:" ) }}

            {{ form_widget(form.budget,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.specialite,"specialite:" ) }}

            {{ form_widget(form.specialite,{attr: {class:'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.imageFile,"image:") }}

            {{ form_widget(form.imageFile,{ 'attr': {'id': 'image'} }) }}
        </div>

    </div>
    <div class="card-footer">
        <button type="submit" href="{{ path('add_resto') }}" class="btn btn-primary">Submit</button>
    </div>




    {{ form_end(form) }}

{% endblock content %}