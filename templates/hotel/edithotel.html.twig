    {{ form_start(form,{attr:{'id':'form'}}) }}
    <div class="container">
        <div class="form-group">
            {{ form_label(form.nom,"Nom du hotel:") }}

            {{ form_widget(form.nom, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.emplacement,"emplacement:" ) }}

            {{ form_widget(form.emplacement,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.contact,"contact:" ) }}

            {{ form_widget(form.contact,{attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.tarif,"tarif:" ) }}

            {{ form_widget(form.tarif,{attr: {class:'form-control'}}) }}
        </div>

    </div>
    <div class="card-footer">
        <button type="submit" href="{{ path('add_hotel') }}" class="btn btn-primary">Submit</button>
    </div>




    {{ form_end(form) }}
